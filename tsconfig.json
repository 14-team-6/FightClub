{
  "compilerOptions": {
      "outDir": "dist",
      "target": "es2016",
      "declaration": false,
      "module": "commonjs",
      "strictNullChecks": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "noImplicitAny": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "jsx": "react",
      "baseUrl": "./",
      "paths": {
        "@frontend/*": ["frontend/*"],
        "@backend/*": ["backend/*"]
      }
  },
  "exclude": [
    "node_modules"
  ]
}
